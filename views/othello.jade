extends layout
block head
  script(src='js/jquery.cookie-1.4.1.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/jquery.transit.js')
  script(src='js/board.js')
  script(src='js/connect.js')
  script(src='js/game.js')
  link(rel='stylesheet', href='css/othello.css')
block content
  h1 Othello game
  #game
    button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#newGame')
      | New Game

    #newGame.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
            h4#myModalLabel.modal-title New game
          .modal-body
            form
              label.control-label(for='nickname') Nickname:
              input#nickname.form-control(type='text')
              label.control-label(for='nickname') Nickname:
              input#nickname.form-control(type='text')
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Submit

    #pass.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
            h4#myModalLabel.modal-title Pass
          .modal-body
            | No more moves.
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Pass
    #game-board


